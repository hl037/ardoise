# Maintainer: LÃ©o Flaventin Hauchecorne <hl037.prog@gmail.com>
pkgname=ardoise-git
pkgver=20130307
pkgrel=1
pkgdesc="Unlimited drawing surface for quick diagrams and notes"
arch=('i686' 'x86_64')
url="https://gitorious.org/ardoise"
license=('GPL3')
groups=()
depends=('qt5-base')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://gitorious.org/ardoise/ardoise.git
_gitname=ardoise


build() {
   cd "$srcdir"
   msg "Connecting to GIT server...."

   if [[ -d "$_gitname" ]]; then
      cd "$_gitname" && git pull origin
      msg "The local files are updated."
   else
      git clone "$_gitroot" "$_gitname" --depth=1
   fi

   msg "GIT checkout done or server timeout"
   msg "Starting build..."

   SRC="$srcdir/$_gitname-build"
   rm -rf "$SRC"
   git clone "$srcdir/$_gitname" "$SRC"

   #
   # BUILD HERE
   #
   
   if test "$CARCH" == i686 ;
      then
      SPEC="linux-g++-32"
   else
      if test "$CARCH" == x86_64
      then
         SPEC="linux-g++-64"
      else
         echo "unknown architecture"
         exit 1
      fi
   fi
   
   

   BUILD="$srcdir/build"
   rm -rf "$BUILD"
   mkdir "$BUILD"
   cd "$BUILD"
   qmake "$SRC/ardoise.pro" -r -spec $SPEC
   make -w
}

package() {
   BUILD="$srcdir/build"
   SRC="$srcdir/$_gitname-build"
   cd "$BUILD"
   install -d "$pkgdir/usr/bin" || return 1
   install -Dm755 ardoise "$pkgdir/usr/bin" || return 1
   cd "$SRC"
   install -d "$pkgdir/usr/share/icons" || return 1
   install -Dm755 erase.png "$pkgdir/usr/share/icons/ardoise.png" || return 1
   cd linux
   install -d "$pkgdir/usr/share/applications" || return 1
   install -Dm755 ardoise.desktop "$pkgdir/usr/share/applications" || return 1
}

